<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
      <servlet-name>LoginServlet</servlet-name>
      <servlet-class>com.apusic.login.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet>
      <servlet-name>AuthzServlet</servlet-name>
      <servlet-class>com.apusic.login.servlet.AuthzServlet</servlet-class>
  </servlet>
  <servlet>
      <servlet-name>CheckStatusServlet</servlet-name>
      <servlet-class>com.apusic.login.servlet.CheckStatusServlet</servlet-class>
  </servlet>
  <servlet>
      <servlet-name>LoginQRCodeServlet</servlet-name>
      <servlet-class>com.apusic.login.servlet.LoginQRCodeServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
      <servlet-name>LoginServlet</servlet-name>
      <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
      <servlet-name>AuthzServlet</servlet-name>
      <url-pattern>/authz</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
      <servlet-name>CheckStatusServlet</servlet-name>
      <url-pattern>/status</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
      <servlet-name>LoginQRCodeServlet</servlet-name>
      <url-pattern>/qr</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
      <welcome-file>/welcome.jsp</welcome-file>
  </welcome-file-list>
  
</web-app>
